{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Project",
            "program": "${workspaceFolder}\\index.ts",
            "preLaunchTask": "npm: build",
            "sourceMaps": true,
            "smartStep": true,
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run CLI",
            "program": "${workspaceFolder}\\dist\\bin.js",
            "preLaunchTask": "npm: build",
            "sourceMaps": true,
            "smartStep": true,
            "args": [
                "-p",
                "",
                "-t",
                ""
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ]
}
